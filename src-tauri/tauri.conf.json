{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
    
  },
  "package": {
    "productName": "Monitor de Projetos",
    "version": "3.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs":{
        "all": true,
        "scope": ["**"]
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "label": "safra",
        "title": "Safra",
        "width": 800,
        "height": 900
      }
    ]
    ,
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "MonitorProjetosSafra2",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  
  }
}
